{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": ".",
  "projects": {
    "feature": {
      "projectType": "library",
      "root": ".",
      "sourceRoot": "src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "feature/tsconfig.lib.json",
            "project": "feature/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "feature/tsconfig.lib.prod.json"
            }
          }
        }
      }
    }
  },
  "defaultProject": "feature"
}
