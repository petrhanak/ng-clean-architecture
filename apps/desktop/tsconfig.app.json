{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "out-tsc/app",
    "target": "es2015",
    "module": "es2020",
    "types": [],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/main.ts", "src/polyfills.ts"],
  "exclude": ["**/*.spec.ts"],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "preserveWhitespaces": true
  }
}
