    "@linters/prettier-config": "^1.3.1",
    "@linters/stylelint-scss-config": "^1.5.2",
    "@types/jest": "^26.0.20",
    "eslint": "^7.20.0",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "jest-preset-angular": "^8.4.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.11.0",
    "typescript": "~4.1.5"
